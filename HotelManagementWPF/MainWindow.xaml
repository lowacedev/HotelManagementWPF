<Window x:Class="HotelManagementWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagementWPF"
        mc:Ignorable="d"
        Title="Hotel Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0BEC5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="15,20,15,8"/>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="45,12,15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"/>
                                <Path Data="M15.5,14 L20.5,19 L19,20.5 L14,15.5 C12.62,16.81 10.87,17.5 9,17.5 C4.86,17.5 1.5,14.14 1.5,10 C1.5,5.86 4.86,2.5 9,2.5 C13.14,2.5 16.5,5.86 16.5,10 C16.5,11.87 15.81,13.62 14.5,15 L15.5,14 Z M9,4 C6.24,4 4,6.24 4,9 C4,11.76 6.24,14 9,14 C11.76,14 14,11.76 14,9 C14,6.24 11.76,4 9,4 Z" 
                                  Fill="#6C757D" 
                                  Width="18" Height="18" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="15,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header row -->
            <RowDefinition Height="*"/>
            <!-- Main content row -->
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Grid.RowSpan="2"
                x:Name="Sidebar"
                Background="#2C3E50"
                BorderBrush="#34495E"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <!-- Header area in sidebar -->
                    <RowDefinition Height="*"/>
                    <!-- Navigation -->
                </Grid.RowDefinitions>

                <!-- Sidebar Header with Logo and Collapse Button -->
                <Border Grid.Row="0" 
                        Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="0,0,0,1">
                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" x:Name="LogoPanel">
                            <Image Source="Resources/Icons/logo.png" 
                                   Width="41" Height="40" 
                                   x:Name="HeaderLogoImage"
                                   Margin="-8,0,0,0" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="HeaderLogoText" 
                                           Text="SUMMIT" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="16"/>
                                <TextBlock Text="Hotel Management" 
                                           Foreground="#BDC3C7" 
                                           FontSize="10"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Collapse Button (always visible) -->
                        <Button Grid.Column="1"
                                x:Name="HamburgerButton"
                                Click="HamburgerButton_Click"
                                Background="Transparent" 
                                BorderThickness="0" 
                                Padding="4" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Width="28" Height="28">
                            <Button.Content>
                                <Path Data="M3,6 L21,6 M3,12 L21,12 M3,18 L21,18" 
                                      Stroke="White" 
                                      StrokeThickness="2" 
                                      Stretch="Uniform"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <!-- Dashboard -->
                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="DashboardButton"
                            Click="NavigationButton_Click"
                            Tag="Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/dashboard.png" Width="20" Height="20" Margin="0,0,15,0"/>

                                <TextBlock x:Name="DashboardText" 
                                       Text="Dashboard" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Management Section -->
                        <TextBlock x:Name="ManagementHeader"
                               Text="Management" 
                               Style="{StaticResource SectionHeaderStyle}"/>
                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="BookingsButton"
                            Click="NavigationButton_Click"
                            Tag="Bookings">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/bookings.png" Width="20" Height="20" Margin="0,0,15,0"/>

                                <TextBlock x:Name="BookingsText" 
                                       Text="Bookings" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="GuestsButton"
                            Click="NavigationButton_Click"
                            Tag="Guests">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/guests.png" Width="20" Height="20" Margin="0,0,15,0"/>
                                <TextBlock x:Name="GuestsText" 
                                       Text="Guests" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}" 
        x:Name="EmployeesButton"
        Click="NavigationButton_Click"
        Tag="Employees">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/employees.png" Width="20" Height="20" Margin="0,0,15,0"/>
                                <TextBlock x:Name="EmployeesText" 
                   Text="Employees" 
                   Foreground="White" 
                   VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>


                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="RoomsButton"
                            Click="NavigationButton_Click"
                            Tag="Rooms">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/rooms.png" Width="20" Height="20" Margin="0,0,15,0"/>

                                <TextBlock x:Name="RoomsText" 
                                       Text="Rooms" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="UsersButton"
                            Click="NavigationButton_Click"
                            Tag="Users">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/users.png" Width="20" Height="20" Margin="0,0,15,0"/>

                                <TextBlock x:Name="UsersText" 
                                       Text="Users" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Operations Section -->
                        <TextBlock x:Name="OperationsHeader"
                               Text="Operations" 
                               Style="{StaticResource SectionHeaderStyle}"/>
                        <!-- Replace the current Expander section with this -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Main Inventory Button with Dropdown Arrow -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Main Inventory Button -->
                                <Button Grid.Column="0" 
                Style="{StaticResource NavButtonStyle}" 
                x:Name="InventoryButton"
                Click="NavigationButton_Click"
                Tag="Inventory"
                Margin="5,2,0,2">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/Icons/inventory.png" Width="20" Height="20" Margin="0,0,15,0"/>
                                        <TextBlock x:Name="InventoryText" 
                          Text="Inventory" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Dropdown Toggle Button -->
                                <Button Grid.Column="1"
                x:Name="InventoryDropdownButton"
                Click="InventoryDropdown_Click"
                Background="Transparent" 
                BorderThickness="0" 
                Width="30" 
                Height="40"
                Margin="0,2,5,2"
                VerticalAlignment="Stretch">
                                    <Path x:Name="InventoryDropdownArrow"
                  Data="M7,10 L12,15 L17,10" 
                  Stroke="White" 
                  StrokeThickness="1.5" 
                  Stretch="Uniform"
                  Width="12" Height="8"/>
                                </Button>
                            </Grid>

                            <!-- Dropdown Content -->
                            <StackPanel Grid.Row="1" 
                x:Name="InventoryDropdownContent"
                Visibility="Collapsed"
                Margin="20,0,0,0">

                                <Button Style="{StaticResource NavButtonStyle}" 
                x:Name="ItemsButton"
                Click="NavigationButton_Click"
                Tag="Items">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/Icons/items.png" Width="18" Height="18" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="ItemsText" Text="Items" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource NavButtonStyle}" 
                x:Name="SuppliersButton"
                Click="NavigationButton_Click"
                Tag="Suppliers">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/Icons/suppliers.png" Width="18" Height="18" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="SuppliersText" Text="Suppliers" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource NavButtonStyle}" 
                x:Name="ReportsButton"
                Click="NavigationButton_Click"
                Tag="Reports">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/Icons/reports.png" Width="18" Height="18" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="ReportsText" Text="Reports" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="PayrollButton"
                            Click="NavigationButton_Click"
                            Tag="Payroll">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/billings.png" Width="20" Height="20" Margin="0,0,15,0"/>

                                <TextBlock x:Name="PayrollText" 
                                       Text="Payroll" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="ServicesButton"
                            Click="NavigationButton_Click"
                            Tag="Services">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources/Icons/services.png" Width="20" Height="20" Margin="0,0,15,0"/>

                                <TextBlock x:Name="ServicesText" 
                                       Text="House Keeping" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Header (always visible) -->
        <Border Grid.Column="1" Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="HeaderTitle"            
                   Text="" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   VerticalAlignment="Center"/>
                <!-- Search Box -->
                <!-- User Profile Section -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Ellipse Width="35" Height="35"
                             Fill="#FF9800"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="A"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="-35,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Lebron James"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        <TextBlock Text="Administrator"
                                   Foreground="#666"
                                   FontSize="12"/>
                    </StackPanel>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="5"
                            Margin="10,0,0,0">
                        <Path Data="M7,10 L12,15 L17,10"
                              Stroke="#666"
                              StrokeThickness="2"
                              Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area (swapped by navigation) -->
        <ContentControl x:Name="MainContentArea" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
