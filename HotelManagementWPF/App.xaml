<Application x:Class="HotelManagementWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HotelManagementWPF"
             xmlns:common="clr-namespace:HotelManagementWPF.Common"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Converters -->
        <common:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <common:StatusToForegroundConverter x:Key="StatusToForegroundConverter"/>
        <common:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application>
